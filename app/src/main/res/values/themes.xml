<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeroMarket" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rose_500</item>
        <item name="colorPrimaryVariant">@color/rose_700</item>
        <item name="colorOnPrimary">@color/text_accent_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magenta_200</item>
        <item name="colorSecondaryVariant">@color/magenta_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/rose_200</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TheX.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TheX.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TheX.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TheX.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TheX.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TheX.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TheX.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TheX.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TheX.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TheX.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TheX.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TheX.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TheX.Overline</item>

        <item name="android:windowBackground">@color/rose_200</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.TheX.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.TheX.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.TheX.LargeComponent</item>
    </style>

    <style name="button_filled_style" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Theme.NeroMarket.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:shadowColor" >@color/white</item>
    </style>

    <style name="Theme.NeroMarket.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeroMarket.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>